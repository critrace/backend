{
  "name": "@critrace/backend",
  "version": "0.0.1",
  "description": "Backend logic for criterium registration and scoring",
  "main": "index.js",
  "scripts": {
    "start": "node -e \"require('dotenv').config(); require('.').listen(4000);\"",
    "pretest": "docker run --name=critrace-test -d --rm -p 27017:27017 mongo:4.0.9-xenial",
    "test": "nyc ava",
    "posttest": "docker kill critrace-test",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "deploy": "now --target production -t $NOW_TOKEN && now alias -t $NOW_TOKEN"
  },
  "eslintConfig": {
    "extends": [
      "@jchancehud/eslint-config"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/critrace/backend.git"
  },
  "author": "Chance Hudson",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/critrace/backend/issues"
  },
  "homepage": "https://github.com/critrace/backend#readme",
  "dependencies": {
    "async-express": "^0.1.3",
    "bcrypt": "^3.0.5",
    "email-validator": "^2.0.4",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mongoose": "^5.4.19"
  },
  "devDependencies": {
    "@jchancehud/eslint-config": "^0.0.10",
    "ava": "^1.4.1",
    "coveralls": "^3.0.3",
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "nanoid": "^2.0.1",
    "now": "^15.0.4",
    "nyc": "^13.3.0",
    "supertest": "^4.0.2"
  }
}
