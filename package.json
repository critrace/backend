{
  "name": "@critrace/backend",
  "version": "0.0.1",
  "description": "Backend logic for criterium registration and scoring",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build || true",
    "start": "npm run build && node -e \"require('dotenv').config(); require('./build');\"",
    "pretest": "docker kill critrace-test || true && docker run --name=critrace-test -d --rm -p 27017:27017 mongo:4.0.9-xenial",
    "test": "nyc ava",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "npm run clean && webpack-cli",
    "build:prod": "npm run clean && webpack-cli --config webpack.prod.js",
    "deploy": "npm run build:prod && now --target production -t $NOW_TOKEN --scope critresult"
  },
  "eslintConfig": {
    "extends": [
      "@jchancehud/eslint-config"
    ]
  },
  "nyc": {
    "include": [
      "routes/*.js",
      "models/*.js",
      "middleware/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/critrace/backend.git"
  },
  "author": "Chance Hudson",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/critrace/backend/issues"
  },
  "homepage": "https://github.com/critrace/backend#readme",
  "dependencies": {
    "async-express": "^0.1.6",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.5",
    "csv-parse": "^4.4.3",
    "csv-stringify": "^5.3.0",
    "email-validator": "^2.0.4",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mongoose": "^5.4.19",
    "multer": "^1.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@jchancehud/eslint-config": "^0.0.10",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.134",
    "@types/mongoose": "^5.5.5",
    "@types/multer": "^1.3.7",
    "@types/nanoid": "^2.0.0",
    "@types/node": "^12.0.7",
    "ava": "^1.4.1",
    "aws-sdk": "^2.471.0",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.3",
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "nanoid": "^2.0.1",
    "now": "^15.0.4",
    "nyc": "^13.3.0",
    "random-objectid": "0.0.3",
    "supertest": "^4.0.2",
    "typescript": "^3.5.1",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3",
    "webpack-node-externals": "^1.7.2"
  }
}
